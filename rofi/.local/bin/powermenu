#!/usr/bin/env sh

# Set font to Font Awesome 5 Free if this is gibberish
choice=$(echo -e "\n\n\n\n" | \
    rofi -dmenu -theme ~/.config/rofi/themes/powermenu.rasi)
case $choice in
    )
        # TODO create a script for this
        betterlockscreen -l -t "$(fortune lock || echo Something went wrong)" & sfx shutter
        ;;
    )
        systemctl poweroff & sfx shutdown
        ;;
    )
        systemctl hibernate
        ;;
    )
        systemctl suspend
        ;;
    )
        # TODO differentiate by WM
        bspc quit & sfx shutter
        ;;
    *)
        exit 1
        ;;
esac

