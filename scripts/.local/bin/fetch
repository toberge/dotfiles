#!/usr/bin/env bash

RAUD="\e[33m"
BLAU="\e[32m"
RESET="\e[0m"
BOLD="\e[1m"

prunt() {
    output=$($2 | tr -d '\n')
    [[ -z "$output" ]] && return
    printf "   $BLAU$BOLD%4s$RESET $RAUD│$RESET %s\n" "$1" "$output"
}

colors() {
    echo -n "  "
    for i in {1..7}
    do
        echo -ne "\e[4${i}m  "
    done
    echo -e "$RESET"

}

os() {
    uname -o
}

distro() {
    lsb_release -ds | tr -d '"' # add -rc
}

wm() {
    echo $DESKTOP_SESSION
}

shell() {
    echo ${SHELL##*/}
}

redacted() {
    echo [REDACTED]
}

editor() {
    echo ${EDITOR##*/}
}

packs() {
    pacman -Q | wc -l
}

model() {
    cat /sys/devices/virtual/dmi/id/{board_name,product_version,product_name} \
        | awk '{ print length"\t"$0 }' | sort -n | cut -f2- | tail -n 1
}

song() {
    playerctl metadata title 2> /dev/null
}


echo
case $1 in
    cheese)
        prunt "os" "echo GNU Hurd"
        prunt "sys" redacted
        prunt "pac" "echo -1"
        prunt "wm" "echo epic hacker wm"
        prunt "ed" "echo the standard text editor"
        ;;
    all)
        prunt "os" os
        prunt "dis" distro
        prunt "sys" model
        prunt "pac" packs
        prunt "wm" wm
        prunt "sh" shell
        prunt "ed" editor
        prunt "  ♪♪" song
        ;;
    *)
        prunt "dis" distro
        prunt "sys" model
        prunt "pac" packs
        prunt "wm" wm
        prunt "sh" shell
        ;;
esac
echo
colors
echo
