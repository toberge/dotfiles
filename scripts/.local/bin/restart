#!/usr/bin/env bash

case $1 in
    picom)
        pkill picom
        sleep .01
        picom -b --dbus --experimental-backends --config ~/.config/picom/picom.conf
        ;;
    dunst)
        pkill dunst
        sleep .01
        dunst &
        ;;
    sxhkd)
        pkill sxhkd
        sleep .01
        SXHKD_SHELL=/bin/sh sxhkd &
        ;;
    spectrwm)
        pkill -HUP spectrwm
        ;;
    *)
        echo "ok idk what u want so plz stop"
        exit 1
        ;;
esac

