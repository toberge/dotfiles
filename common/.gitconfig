[include]
    path = .gitcredentials
[init]
    defaultBranch = main
[alias]
    a = add
    c = commit
    ca = commit --amend
    cm = commit --message
    co = checkout
    cb = checkout -b
    d = diff
    ds = diff --staged
    f = fetch
    l = log --oneline --color --graph
    p = push
    r = rebase
    rc = rebase --continue
    ri = rebase --interactive
    rem = reset --mixed
    ph = push -u origin HEAD
    s = stash
    sp = stash pop
    sl = stash list
    aa = add -A


[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    light = false    # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
